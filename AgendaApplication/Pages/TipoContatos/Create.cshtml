@page "{id:int?}/{handler?}"
@model CreateModel
@{
}

<br />
<h2>Criar tipo de categoria</h2>
<hr />

<form method="post">
    <div class="form-border">
        <div asp-validation-summary="ModelOnly" class="text-danger">
        </div>
        <div class="form-group row">
            <div class="col-sm-2">
                <label asp-for="TipoContato.Tipo" class="custom-label"></label>
            </div>
            <div class="col-sm-4">
                <input asp-for="TipoContato.Tipo" placeholder="Informe o tipo de contato" class="form-control" />
            </div>
            <span asp-validation-for="TipoContato.Tipo" class="text-danger"></span>
        </div>

        <br />
        <div class="form-group">
            <input type="submit" value="Criar" class="btn btn-sm btn-primary" />
            <a asp-page="Index" class="btn btn-sm btn-success"><span class="glyphicon glyphicon-list"></span> De volta à lista </a>
        </div>

        <br />
        <div class="form-group">
            <a asp-page="/Contatos/Create">Voltar ao cadastro de contato?</a>
        </div>
    </div>
</form>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
