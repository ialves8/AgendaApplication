@page "{id:int?}/{handler?}"
@model AgendaApplication.Pages.TipoContatos.IndexModel
@{
}

<br />
@if (Model.Message != null)
{
    <div class="alert alert-info alert-dismissable" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="close">
            <span aria-hidden="true">&times;</span>
        </button>
        @Model.Message
    </div>
}

<br />
<h2>Lista de tipo de contatos</h2>
<br />

<div style="height:60px;">
    <div class="col-sm-3" style="padding-top:20px;">
        <a asp-page="Create" type="button" class="btn btn-primary">
            <span class="glyphicon glyphicon-plus"></span>
            &nbsp; Cadastrar novo
        </a>
    </div>
    <div class="col-sm-9">
        <div class="row">
            <div class="col-sm-12 text-right">
                <a asp-page="/Contatos/Create">Voltar ao cadastro de contato?</a>
            </div>
        </div>
    </div>
</div>
<br />

<div class="form-border">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(m => m.TipoContato[0].Tipo)
            </th>
            <th></th>
        </tr>
        @foreach (var item in Model.TipoContato)
        {
            <tr>
                <td>
                    @Html.DisplayFor(m => item.Tipo)
                </td>
                <td>
                    <a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-success"><span class="glyphicon glyphicon-pencil"> Editar </span></a>

                    <a asp-page="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm"><span class="glyphicon glyphicon-remove"> Excluir </span></a>
                </td>
                <td></td>
            </tr>
        }
    </table>
</div>
